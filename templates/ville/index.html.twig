{% extends 'base.html.twig' %}

{% block title %}Liste des villes{% endblock %}

{% block body %}
    <h1 class="text-center mt-4 mb-4">Liste des villes</h1>

    <table class="table table-hover table-responsive-md"style="width: 70%; margin: 0 auto; text-align: center">
        <thead>
        <tr>
            {# <th>Id</th> #}
            <th style="width: 30%">Nom</th>
            <th style="width: 30%">Code Postal</th>
            <th style="width: 30%">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr>
                {# <td>{{ ville.id }}</td> #}
                <td>{{ ville.nom }}</td>
                <td>{{ ville.codePostal }}</td>
                <td>
                    <div class="btn-group">
                        <a id="groupVille" class="btn btn-outline-primary" style="margin-right: 0.5em" href="{{ path('app_ville_show', {'id': ville.id}) }}">Description</a>
                        <a id="groupVille" class="btn btn-warning" href="{{ path('app_ville_edit', {'id': ville.id}) }}">Modifier/Supprimer</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de ville trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btns mx-auto" style="display: flex; justify-content: center; ">
    <button type="submit" class="btn btn-primary" style="width: 10em;margin-right: 2em" onclick="window.location.href='{{ path('app_ville_new') }}'">Créer une ville</button>
    <button type="submit" class="btn btn-outline-secondary" style="width: 10em;" onclick="window.location.href='{{ path('sorties') }}'">Retour</button>
    </div>

{% endblock %}
