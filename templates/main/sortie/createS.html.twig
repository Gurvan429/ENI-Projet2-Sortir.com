{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <h1 class="display-4 text-center mt-4" style="padding: 50px;">Créer une sortie</h1>
    </div>

    <div class="container">
        <div class="border border-dark rounded px-2 py-2 mx-auto" style="margin-top: 2em; width: 80%;">

            <div class="row">
                <div class="col-md-6">
                    <!-- Colonne gauche -->
                    {{ form_start(sortieForm) }}
                    <div class="form-group">
                        <label for="{{ sortieForm.nom.vars.id }}">Nom :</label>
                        {{ form_widget(sortieForm.nom, {'attr': {'class': 'form-control form-control-sm'}}) }}
                    </div>

                    <div class="form-group">
                        <label for="{{ sortieForm.dateHeureDebut.vars.id }}">Date et heure de la sortie :</label>
                        {{ form_widget(sortieForm.dateHeureDebut, {'attr': {'class': 'form-control form-control-sm'}}) }}
                    </div>

                    <div class="form-group">
                        <label for="{{ sortieForm.duree.vars.id }}">Durée :</label>
                        <div>
                            {{ form_widget(sortieForm.duree) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="{{ sortieForm.datelimiteInscription.vars.id }}">Date limite d'inscription :</label>
                        {{ form_widget(sortieForm.datelimiteInscription, {'attr': {'class': 'form-control form-control-sm'}}) }}
                    </div>

                    <div class="form-group">
                        <label for="{{ sortieForm.nbInscriptionsMax.vars.id }}">Nombre de places :</label>
                        {{ form_widget(sortieForm.nbInscriptionsMax, {'attr': {'class': 'form-control form-control-sm'}}) }}
                    </div>

                    <div class="form-group">
                        <label for="{{ sortieForm.infosSortie.vars.id }}">Description et infos :</label>
                        {{ form_widget(sortieForm.infosSortie, {'attr': {'class': 'form-control form-control-sm'}}) }}
                    </div>
                </div>
                    <div class="col-md-6">
                        <!-- Colonne droite -->
                        <div class="form-group">
                            <label for="{{ sortieForm.campus.vars.id }}">Campus : </label>
                            {{ form_widget(sortieForm.campus, {'attr': {'class': 'form-control-sm'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="{{ sortieForm.lieu.vars.id }}">Lieu :</label>
                            <div class="input-group">
                                {{ form_widget(sortieForm.lieu, {'attr': {'class': 'form-control-sm rounded-0'}}) }}
                            </div>
                        </div>

                        <div class="input-group-append d-flex justify-content-end">
                            <span class="mx-2 align-self-center" style="margin-right: 10px;">Ajouter un lieu :</span>
                            <a href="{{ path('app_lieu_new') }}" class="btn btn-outline-secondary rounded-circle mx-2" id="add-location-btn" title="Ajouter un lieu">+</a>
                        </div>
                    </div>
            </div>
        </div>
    </div>


    <div>
        <div class="btns mx-auto" style="display: flex; justify-content: space-between; width: 500px;">
            {{ form_widget(sortieForm.create) }}
            {{ form_widget(sortieForm.save) }}
            <div>
                {# Bouton pour annuler #}
                <a class="btn btn-outline-secondary btn-sm" href="{{ path('sorties') }}"
                  style="width: 125px; height: 50px; display: flex; align-items: center; justify-content: center; box-shadow: 2px 2px 5px #090000;">Annuler</a>
            </div>
        </div>
    </div>
    {{ form_end(sortieForm) }}

{% endblock %}

