{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}

    <h1 class="display-4 text-center mt-4">Mon profil</h1>

    <div class=" container-fluid mt-5 mb-5">
        <div class="border border-dark col-md-8 rounded px-3 py-3 mx-auto" style="width: 80%">
            <div class="row">
                <div class="col-md-8 mx-auto ">

                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="btns mx-auto" style="display: flex; justify-content: space-between; max-width: 90%">
                        <button onclick="return confirm('Êtes-vous sûr de vouloir enregistrer ces modifications ?')" type="submit" class="btn btn-outline-primary">Enregistrer</button>
                        <button type="submit" class="btn btn-outline-secondary">Annuler</button>
                    </div>
                {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>




{% endblock %}