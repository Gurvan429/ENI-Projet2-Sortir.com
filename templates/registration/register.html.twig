{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
<h1 class="display-4 text-center mt-4">Créer un compte</h1>

<div class=" container-fluid mt-5 mb-5">
    <div class="border border-dark col-md-8 rounded px-3 py-3 mx-auto" style="width: 80%">
        <div class="row">
            <div class="col-md-8 mx-auto ">

                    {{ form_start(registrationForm) }}
                    {{ form_widget(registrationForm) }}
                <div class="btns mx-auto" style="display: flex; justify-content: space-between; max-width: 90%">
                    <button onclick="return confirm('Êtes-vous sûr de vouloir créer cette utilisateur ?')" type="submit" class="btn btn-primary">Créer</button>
                    <button type="submit" class="btn btn-outline-secondary"><a href="{{ path('sorties') }}" ></a>Annuler</button>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>



{% endblock %}
